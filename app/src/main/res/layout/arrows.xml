<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="fjoseph1313"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/shooterView"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/user_icon"
        android:id="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:text="Feathers are just that. They typically are made from the primary flight feathers of a turkey wing. ... For example, don't put two feathers and a vane on an arrowText. "
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/arrowView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shooterView"
        app:layout_constraintLeft_toLeftOf="@+id/shooterView"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColor="@android:color/black" />

    <TextView
        android:text="11 December 5:39PM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/shotDtView"
        app:layout_constraintLeft_toLeftOf="@+id/arrowView"
        app:layout_constraintTop_toBottomOf="@+id/arrowView"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="576 Vanes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/vanes"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/shotDtView"
        app:layout_constraintTop_toBottomOf="@+id/arrowView"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/holo_green_dark" />
</android.support.constraint.ConstraintLayout>